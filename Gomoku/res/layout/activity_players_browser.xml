<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".PlayersBrowser" >

    <Button
        android:id="@+id/refreshButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:text="Refresh" />

    <Button
        android:id="@+id/backButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:text="Back" />

    <Button
        android:id="@+id/playerButton1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/refreshButton"
        android:layout_alignParentTop="true"
        android:layout_alignRight="@+id/backButton"
        android:text="playerButton1" />

    <Button
        android:id="@+id/playerButton2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/playerButton1"
        android:layout_alignRight="@+id/playerButton1"
        android:layout_below="@+id/playerButton1"
        android:text="playerButton2" />

    <Button
        android:id="@+id/playerButton3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/playerButton2"
        android:layout_alignRight="@+id/playerButton2"
        android:layout_below="@+id/playerButton2"
        android:text="playerButton3" />

    <Button
        android:id="@+id/playerButton4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/playerButton3"
        android:layout_alignRight="@+id/playerButton3"
        android:layout_below="@+id/playerButton3"
        android:text="playerButton4" />

    <Button
        android:id="@+id/playerButton5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/playerButton4"
        android:layout_alignRight="@+id/playerButton4"
        android:layout_below="@+id/playerButton4"
        android:text="playerButton5" />

    <Button
        android:id="@+id/playerButton6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/playerButton5"
        android:layout_alignRight="@+id/playerButton5"
        android:layout_below="@+id/playerButton5"
        android:text="playerButton6" />

</RelativeLayout>
